<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Edit User</h2>
        <%= form_with model: resource, as: resource_name,
                      url: registration_path(resource_name), local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name, class: "label" %>
            <div class="control">
              <%= f.text_field :name, autofocus: true, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :username, class: "label" %>
            <div class="control">
              <%= f.text_field :username, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.email_field :email, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
              <%= f.password_field :password, class: "input" %>
            </div>
            <p class="help">(leave blank if you don't want to change it)</p>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "label" %>
            <div class="control">
              <%= f.password_field :password_confirmation, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :current_password, class: "label" %>
            <div class="control">
              <%= f.password_field :current_password, class: "input" %>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <%= f.submit "Update User", class: "button is-black" %>
              <%= link_to "Back", root_path, class: "button is-black" %>
            </div>
          </div>
        <% end %>
        <br>
        <h4 class="title is-4">Cancel my account</h3>

        <p>Unhappy?</p><br>
  
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-black is-small" %>
      </div>
    </div>
  </div>
</section>


